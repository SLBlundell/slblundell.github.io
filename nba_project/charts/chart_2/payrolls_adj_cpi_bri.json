      "field": "Code", 
      "type": "nominal", 
      "title": "Team"
      },

    "y": {
      "field": "Adjusted_Payroll",
      "type": "quantitative",
      "title": "Adjusted Active Payroll",
      "axis": {"format": "$,.0f"},
      "scale": {"domain": [0, 400000]}
    },
    "color": {"value": "#DF9D9D"},
    "tooltip": [
      {"field": "Team", "title": "Team"},
      {
        "field": "Payroll",
        "title": "Active Payroll non-adjusted",
        "format": "$,"
      }
    ]
  },
